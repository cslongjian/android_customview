<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenlongjian.ycf_customview.demo5_56.Demo5_56Activity">

    <ListView
        android:id="@+id/listview556"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/input"/>

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/suggestion_context_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_width_padding"
            android:layout_marginRight="@dimen/normal_width_padding"
            android:layout_marginTop="@dimen/normal_height_padding"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="测试文案"
            android:maxLength="500"
            android:maxLines="1"
            android:padding="@dimen/normal_height_padding" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交" />


    </LinearLayout>

</RelativeLayout>
